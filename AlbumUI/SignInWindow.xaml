<Window x:Class="AlbumUI.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignInWindow" Height="300" Width="300">
    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/CoreResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="-10,-10,10,10">
            <TextBlock Text="Sign in" HorizontalAlignment="Center" FontSize="30" Margin="0 30 0 0"/>

            <TextBox x:Name="tbUserName" Margin="50 30 50 0" Text="Username" Background="Transparent" TextAlignment="Center" FontSize="15" />


            <PasswordBox x:Name="PasswordBoxUser" Margin="50 10 50 0" Background="Transparent" FontSize="15" />

            <Button x:Name="btnSignIn" Style="{StaticResource MyButton}" IsDefault="True" Content="Next" Margin="50 20 50 0" Click="BtnSignIn_Click"  BorderBrush="Black"/>



        </StackPanel>
    </Grid>
</Window>
